#include <iostream>
#include <cstdio>
#include <cstring>
#include <string>

using namespace std;
int a[1005];
int main()
{
	int n,max,ans;
	while(cin>>n){
		max = 0;
		for(int i = 1;i <= n;i++) cin>>a[i];
		for(int j = 2;j <= n-1;j++){
			if(a[j-1] + a[j] + a[j+1]>max){
				max = a[j-1] + a[j] + a[j+1];
				ans = j;
			}
		}
		cout<<max<<" "<<ans<<endl;
	}
	return 0;
}
